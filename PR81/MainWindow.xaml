        <RadioButton Content="OCT" HorizontalAlignment="Left" Margin="231,168,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="HEX" HorizontalAlignment="Left" Margin="231,188,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <TextBlock x:Name="outNum" HorizontalAlignment="Left" Margin="231,111,0,0" TextWrapping="Wrap" Text="Результат" VerticalAlignment="Top" Height="28" Width="189"/>

    </Grid>
